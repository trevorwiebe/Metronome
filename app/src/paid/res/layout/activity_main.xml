<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.stickyblob.metronome.MainActivity">

    <TextView
        android:id="@+id/beats_per_minute_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/bp_minute"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_minute_btn"/>

    <Button
        android:id="@+id/tap_to_rhythm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tap_to_rhythm_btn_selector"
        android:padding="10dp"
        android:text="@string/tap_to_rhythm_btn"
        android:textColor="@android:color/white"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="@+id/guideline"/>

    <Button
        android:id="@+id/plus_bp_minute_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/plus_minus_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="plusBPMinuteBtnClicked"
        android:text="@string/btn_plus"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/bp_minute_et"
        app:layout_constraintRight_toLeftOf="@+id/bp_minute_et"/>

    <Button
        android:id="@+id/minus_bp_minutes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/plus_minus_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="minusBPMinuteBtnClicked"
        android:text="@string/btn_minus"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/bp_minute_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/minus_bp_minutes_btn"
        app:layout_constraintRight_toLeftOf="@+id/minus_bp_minutes_btn"/>

    <TextView
        android:id="@+id/beats_per_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/bp_measure"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_measure_btn"/>

    <Button
        android:id="@+id/minus_bp_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/plus_minus_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="minusBPMeasureBtnClicked"
        android:text="@string/btn_minus"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>

    <EditText
        android:id="@+id/bp_measure_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:text="@string/zero"
        app:layout_constraintBaseline_toBaselineOf="@+id/minus_bp_measure_btn"
        app:layout_constraintRight_toLeftOf="@+id/minus_bp_measure_btn"/>

    <Button
        android:id="@+id/plus_bp_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/plus_minus_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="plusBPMeasureBtnClicked"
        android:text="@string/btn_plus"
        android:textColor="@android:color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/bp_measure_et"
        app:layout_constraintRight_toLeftOf="@+id/bp_measure_et"/>

    <Button
        android:id="@+id/go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tap_to_rhythm_btn_selector"
        android:onClick="startBtnClicked"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:text="@string/go_btn"
        android:textColor="@android:color/white"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        ads:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/play_circle"
        app:layout_constraintBottom_toTopOf="@+id/light_on_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:id="@+id/beat_in_measure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:text="4"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tap_to_rhythm_btn_selector"
        android:onClick="stopBtnClicked"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:text="@string/stop_btn"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toLeftOf="@+id/guideline"/>

    <ImageButton
        android:id="@+id/no_sound_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="7dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="7dp"
        android:visibility="invisible"
        ads:srcCompat="@drawable/metronome_no_sound_48px_black"
        android:layout_marginBottom="16dp"
        ads:layout_constraintBottom_toTopOf="@+id/divider2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ads:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/sound_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="7dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="7dp"
        ads:srcCompat="@drawable/metronome_sound_48px_black"
        android:layout_marginBottom="16dp"
        ads:layout_constraintBottom_toTopOf="@+id/divider2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ads:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/light_on_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="7dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="7dp"
        ads:srcCompat="@drawable/metronome_light_on_48px_black"
        android:layout_marginBottom="16dp"
        ads:layout_constraintBottom_toTopOf="@+id/divider2"
        ads:layout_constraintRight_toLeftOf="@+id/imageButton5"
        android:layout_marginRight="16dp"
        ads:layout_constraintLeft_toRightOf="@+id/sound_btn"
        android:layout_marginLeft="16dp"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="7dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="7dp"
        ads:srcCompat="@drawable/metronome_flashlight_48px_black"
        android:layout_marginBottom="16dp"
        ads:layout_constraintBottom_toTopOf="@+id/divider2"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        ads:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintBottom_toTopOf="@id/tap_to_rhythm_btn"
        android:layout_marginLeft="8dp"
        ads:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        ads:layout_constraintGuide_begin="192dp"
        android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>


