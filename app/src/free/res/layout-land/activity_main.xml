<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.stickyblob.metronome.MainActivity">

    <TextView
        android:id="@+id/beats_per_minute_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/bp_minute"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <Button
        android:id="@+id/plus_bp_minute_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="plusBPMinuteBtnClicked"
        android:text="@string/btn_plus"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_minute_btn"/>

    <EditText
        android:id="@+id/bp_minute_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/plus_bp_minute_btn"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_minute_btn"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/minus_bp_minutes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="minusBPMinuteBtnClicked"
        android:text="@string/btn_minus"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/bp_minute_et"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_minute_btn"/>

    <TextView
        android:id="@+id/beats_per_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/bp_measure"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/bp_minute_et"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <Button
        android:id="@+id/plus_bp_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="plusBPMeasureBtnClicked"
        android:text="@string/btn_plus"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_measure_btn"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/bp_measure_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/plus_bp_measure_btn"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_measure_btn"/>

    <Button
        android:id="@+id/minus_bp_measure_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_btn_selector"
        android:elevation="4dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:onClick="minusBPMeasureBtnClicked"
        android:text="@string/btn_minus"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/bp_measure_et"
        app:layout_constraintTop_toBottomOf="@+id/beats_per_measure_btn"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/play_circle"
        app:layout_constraintRight_toLeftOf="@+id/stop_btn"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/minus_bp_minutes_btn"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"/>

    <Button
        android:id="@+id/go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_btn_selector"
        android:onClick="startBtnClicked"
        android:paddingBottom="18sp"
        android:paddingTop="18sp"
        android:text="@string/go_btn"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_color_btn_selector"
        android:onClick="stopBtnClicked"
        android:paddingBottom="18sp"
        android:paddingTop="18sp"
        android:text="@string/stop_btn"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/tap_to_rhythm_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_color_btn_selector"
        android:padding="10dp"
        android:text="@string/tap_to_rhythm_btn"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_ad_unit_id_test"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/beat_in_measure_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/view"/>

</android.support.constraint.ConstraintLayout>